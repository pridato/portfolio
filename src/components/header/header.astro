<script>
  // script para dependiendo del scroll, si se baja a cierta altura, se accionan cambios tailwind y sino retirar, cambiando el w de este
  document.addEventListener('scroll', function() {
    const header = document.getElementById('header')!;
    const textDownload = document.getElementById('text-download')!;
    if (window.scrollY > 100) {
      textDownload.classList.add('hidden');
      header.classList.add('bg-gray-800', 'bg-opacity-90', 'backdrop-blur', 'w-1/2', 'rounded-full', 'mt-4', 'left-1/2', 'transform', '-translate-x-1/2');
      header.classList.remove('w-full');
    } else {
      textDownload.classList.remove('hidden');
      header.classList.remove('bg-gray-800', 'bg-opacity-90', 'backdrop-blur', 'w-1/2', 'rounded-full', 'mt-4', 'left-1/2', 'transform', '-translate-x-1/2');
      header.classList.add('w-full');
    }
  });
</script>
