<script>
  document.addEventListener('scroll', function() {
    const header = document.getElementById('header')!;
    if (window.scrollY > 100) {
      header.classList.add('bg-gray-800', 'bg-opacity-95', 'w-1/2', 'rounded-full', 'mt-4');
      header.classList.remove('w-full');
      header.style.left = '50%';
      header.style.transform = 'translateX(-50%)';
    } else {
      header.classList.remove('bg-gray-800', 'bg-opacity-95', 'w-1/2', 'rounded-full');
      header.classList.add('w-full');
      header.style.left = '';
      header.style.transform = '';
    }
  });
</script>
<header id="header" class="px-4 fixed top-0 left-0 w-full transition-all duration-300 z-50">
  <nav class="flex justify-between items-center p-4">
    <div class="logo text-white text-lg">Logo</div>
    <ul class="flex gap-8">
      <li><a href="#experience" class="text-white text-lg hover:text-purple-400 transition">Experience</a></li>
      <li><a href="#projects" class="text-white text-lg hover:text-purple-400 transition">Projects</a></li>
      <li><a href="#skills" class="text-white text-lg hover:text-purple-400 transition">Skills</a></li>
      <li><a href="#contact" class="text-white text-lg hover:text-purple-400 transition">Contact</a></li>
    </ul>
  </nav>
</header>
