---
interface Project {
  name: string;
  description: string;
  tags: string[];
  github_url: string;
}

const { name, description, tags, github_url } = Astro.props;
// como desde el padre enviamos diferentes tags, no dejan de ser diferentes tecnolog√≠as que se usan en el proyecto, por lo que se pueden mostrar en el card
---

<div class="project-card-sm">
  <div class="card-border-gradient"></div>
  <div class="card-container">
    <img src="https://unblast.com/wp-content/uploads/2018/08/Gradient-Mesh-22.jpg" alt="">
    <div class="wrapper">
      <h1>{name}</h1>
      <p>{description}</p>
      <div>
        {tags.map((tag:string) => (
          <span class="tag">{tag}</span>
        ))}
    </div>
  </div>
</div>

<style>
  .project-card-sm {
    width: 500px;
    padding: 2.5px;
    border-radius: 15px;
    position: relative;
    overflow: hidden;
    cursor: pointer;
    display: flex;
    justify-content: center;
    align-items: center;
    transition: transform 0.4s, box-shadow 0.4s ;
  }

  .project-card-sm:hover {
    transform: scale(1.025);
    box-shadow: 0 0 100px -30px #6f45dc;  
  }

  .project-card-sm .card-border-gradient {
    content: "";
    position: absolute;
    bottom: 50%;
    height: 300%;
    width: 10rem;
    z-index: -1;
    background: linear-gradient(to right, transparent, #9272e4, transparent);
    transition: opacity 0.3s ;
    opacity: 0;
    animation: animate-border-gradient 5s infinite linear;
  }

  .project-card-sm:hover .card-border-gradient {
    opacity: 1;
  }

  @keyframes animate-border-gradient {
    0% {
      transform: rotate(0deg);
      transform-origin: bottom;
    }
    100% {
      transform: rotate(360deg) ;
      transform-origin: bottom;
    }
  }


  .project-card-sm .card-container {
    display: flex;
    flex-direction: column;
    align-items: start;
    justify-content: center;
    gap: 1rem;
    padding: 0.75rem;
    border-radius: 12px;
    background-color: hsl(0, 0%, 10%);
    color: rgba(255, 255, 255, 0.7);
  }

  .card-container img {
    height: 200px;
    width: 500px;
  }

  .card-container .wrapper h1 {
    font-size: 1.1rem;
    font-weight: 800;
    color: #fff;
    margin-bottom: 0.75rem;
  }
</style>
