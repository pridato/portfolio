---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Portfolio">
	<main class="flex flex-col text-white gap-y-10">
		<!-- container primera vista del usuario  -->
		<div class="h-[90vh] flex flex-col items-center justify-center ">
			<h1 class="text-2xl" id="typewriter">Full Stack Developer</h1>
			<h2 class="roboto-regular text-8xl">David Arroyo</h2>
		</div>
	</main>

</Layout>

<style>

  h1 {
    font-size: 2em;
    color: white;
    text-transform: uppercase;
  }

  span {
    border-right: .05em solid;
    animation: caret 1s steps(1) infinite;
  }

	.cursor {
    border-right: .05em solid;
    animation: caret 1s steps(1) infinite;
  }

  @keyframes caret {
    50% {
      border-color: transparent;
    }
  }
</style>

<script type="module" src="/src/utils/typewriter.js"></script>
